from setuptools import setup, find_packages

def collect_bin_files():
    """Collect all files under the bin directory."""
    import os
    bin_files = []
    for root, _, files in os.walk("bin"):
        for file in files:
            bin_files.append(os.path.relpath(os.path.join(root, file)))
    return bin_files

setup(
    name="your_package_name",
    version="0.1",
    packages=find_packages(where="src"),
    package_dir={"": "src"},
    include_package_data=True,
    package_data={"": collect_bin_files()},
    zip_safe=False,
)
